{% extends 'base.html.twig' %}

{% block title %}{{ program.title }} - Saison {{ season.number }}{% endblock %}

{% block body %}
    <h1>{{ program.title }} - Saison {{ season.number }}</h1>
    <p>{{ season.description }}</p>

    <h2>Ã‰pisodes :</h2>
    <ul>
        {% for episode in season.episodes %}
            <li>
            <a href="{{ path('program_episode_show', { program : program.id , season : season.id , episode : episode.id }) }}">
            {{ episode.title }} ({{ episode.number }})
            </a>
            </li>
        {% endfor %}
    </ul>

    <a href="{{ path('program_show', {id: program.id}) }}">
        Retour au programme
    </a>
{% endblock %}
